{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5010"
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5020
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/bank/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5030
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/mailer/{everything}",
      "UpstreamHttpMethod": ["GET", "POST", "PUT", "DELETE"],
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5040
        }
      ]
    }    
  ],

  "SwaggerEndPoints": [
    {
      "Key": "Auth",
      "Config": [
        {
          "Name": "API Auth Service",
          "Version": "v1",
          "Url": "http://localhost:5020/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Bank",
      "Config": [
        {
          "Name": "API Bank Service",
          "Version": "v1",
          "Url": "http://localhost:5030/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Mailer",
      "Config": [
        {
          "Name": "API Mailer Service",
          "Version": "v1",
          "Url": "http://localhost:5040/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
